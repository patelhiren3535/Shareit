<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:layout_marginTop="50dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="85dp"
        android:id="@+id/category"
        android:text=" Choose Your Category"
        android:textSize="28dp"
        android:gravity="center"
        android:textStyle="bold"
        />
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            >


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:background="@drawable/scrone"
                android:scaleType="fitXY"
                android:gravity="center"
                android:id="@+id/list1"
                android:padding="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Most Popular Video"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:background="@drawable/scrtwo"
                android:scaleType="fitXY"
                android:gravity="center"
                android:id="@+id/list2"
                android:layout_below="@+id/list1"
                android:padding="20dp"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Full of Action"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:background="@drawable/scronered"
                android:scaleType="fitXY"
                android:gravity="center"
                android:padding="20dp"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Intresting Jokes"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:background="@drawable/scronegreen"
                android:scaleType="fitXY"
                android:gravity="center"
                android:padding="20dp"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Television News"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:background="@drawable/scronebrown"
                android:scaleType="fitXY"
                android:gravity="center"
                android:padding="20dp"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Bollywood News"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:background="@drawable/scroneorange"
                android:scaleType="fitXY"
                android:gravity="center"
                android:padding="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="25dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Hollywood News"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    />

            </LinearLayout>





        </LinearLayout>
    </ScrollView>



</LinearLayout>
