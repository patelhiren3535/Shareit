<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
       >

        <ImageView
            android:layout_width="115dp"
            android:layout_height="45dp"
            android:src="@drawable/logintext"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:id="@+id/ly_login"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/login_icon"
            >
            <FrameLayout
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:background="@drawable/userractangle">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/iconuser"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="8dp"/>

            </FrameLayout>
            <LinearLayout
                android:layout_width="210dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:gravity="center"

                android:weightSum="1">
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:hint="Enter EMail / Username"

                    android:id="@+id/acc_id"
                    android:background="@drawable/userractanglebig"
                    android:textColor="#000000"
                    android:textColorHint="#777"
                    android:layout_marginTop="1dp"
                    android:layout_weight="0.95" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:id="@+id/ly_login1"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/login_icon"
            >
            <FrameLayout
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:background="@drawable/userractangle"
                android:layout_below="@+id/login_icon">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/iconkey"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="8dp"/>

            </FrameLayout>
            <LinearLayout
                android:layout_width="210dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                >
                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:hint="Enter Password"
                    android:id="@+id/acc_id2"
                    android:textColor="#000"
                    android:background="@drawable/userractanglebig"
                    android:textColorHint="#777"
                    android:layout_marginTop="1dp"/>
            </LinearLayout>
        </LinearLayout>

      <!--  <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:textColor="#000000"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="20dp"
                android:textColor="#000000"
                android:text="Male" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textColor="#000000"
                android:text="Female"/>
            </RadioGroup>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/submitractangle"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:id="@+id/signin"
            >
            <ImageView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@drawable/signintext"/>


        </LinearLayout>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:text="Forget Password?"
            android:id="@+id/frgt_pwd"
            android:layout_below="@+id/signin"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="#ffffff"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:text="Registration"
            android:textSize="20sp"
            android:id="@+id/registration"
            android:layout_below="@+id/signin"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="#ffffff"/>

    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:text="LOGIN WITH"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="#ffffff"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/socialfb"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/social_twitter"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/socialgp"/>
    </LinearLayout>



</LinearLayout>
