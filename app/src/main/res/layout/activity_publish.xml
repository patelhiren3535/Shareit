<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <EditText
            android:layout_width="250dp"
            android:layout_height="130dp"
            android:id="@+id/comment_id"

            android:paddingBottom="75dp"
            android:hint="Write a Comment...."/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="280dp"
            android:background="@drawable/iconuser"
            android:layout_marginTop="30dp"/>
        <LinearLayout
            android:id="@+id/take_loc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:layout_below="@+id/comment_id"
                android:background="@drawable/iconkey"
                android:layout_marginTop="170dp"
                android:layout_marginLeft="20dp"/>
            <EditText
                android:layout_width="315dp"
                android:layout_height="45dp"
                android:layout_below="@+id/comment_id"
                android:layout_marginTop="170dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:hint="Take a Location..."
                android:paddingTop="1dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="385dp"
            android:layout_height="110dp"
            android:orientation="horizontal"
            android:layout_below="@+id/take_loc"
            android:layout_marginTop="210dp">


            <ImageView
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:background="@drawable/iconuser"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                />

            <EditText
                android:layout_width="315dp"
                android:layout_height="45dp"
                android:id="@+id/tag_frnd"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:hint="Tag Your Friends"
                android:paddingTop="1dp"/>

        </LinearLayout>
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/ly_share"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_below="@id/tag_frnd"
                android:layout_marginTop="270dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SHARE"
                    android:textColor="#2DC4ED"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="50dp"
                    android:id="@+id/share_id"
                    />
                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="175dp"
                    android:layout_below="@+id/ly_share"
                    android:paddingTop="25dp"
                    android:layout_marginTop="85dp"
                    android:layout_marginLeft="-60dp"


                    >
                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="45dp"

                        android:layout_marginTop="-7dp"
                        android:layout_marginLeft="15dp"

                        />
                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="45dp"

                        android:layout_marginTop="-7dp"
                        android:layout_marginLeft="195dp"

                        />
                    <!--<FrameLayout-->
                    <!--android:layout_width="fill_parent"-->
                    <!--android:layout_height="65dp"-->
                    <!--android:layout_below="@+id/ly_share"-->
                    <!--android:paddingTop="25dp"-->
                    <!--android:layout_marginTop="85dp"-->
                    <!--android:layout_marginLeft="-60dp"-->
                    <!--&gt;</FrameLayout>-->


                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="45dp"

                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="15dp"

                        />
                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="45dp"

                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="195dp"

                        />
                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="45dp"

                        android:layout_marginTop="89dp"
                        android:layout_marginLeft="15dp"

                        />
                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="45dp"

                        android:layout_marginTop="89dp"
                        android:layout_marginLeft="195dp"

                        />

                </FrameLayout>
            </LinearLayout>
        </ScrollView>



    </FrameLayout>
</LinearLayout>